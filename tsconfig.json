{
   "compilerOptions": {
      "strict": true,
      "lib": [
         "ES5",
         "ES2015",
         "ES2016",
         "ES2018",
         "ES2019",
         "ES2020",
      ],
      "target": "ES2020",
      "moduleResolution": "Node",
      "module": "es6", // I wanted to emit commonjs but rollup doesn't like it
      "newLine": "lf",
      "allowJs": false,
      "allowSyntheticDefaultImports": true, // man I really didn't want to use this
      "downlevelIteration": true, // I like iterating on strings
   },

   "include": ["*/**.ts"],

   "exclude": [
      "dist",
      "node_modules",
   ]
}
